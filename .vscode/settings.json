{
    "files.exclude": {
        "**/.git": true,
        "node_modules/**": true,
        "npm-debug.*.*": true,
        "npm-debug.*": true,
        ".nyc_output/**": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "coverage/**": true,
        "build/**": true
    },
    "typescript.tsdk": "./node_modules/typescript/lib",
    "todoScanRegex":   "\\W{1}(?:TODO|FIXME)\\s*\\W{0,1}(\\s+.*|(?:\\w|\\d).*)$",
    "todoIgnore":   ["./node_modules/**"]
}