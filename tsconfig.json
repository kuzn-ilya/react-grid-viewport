{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "noEmitOnError": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "jsx": "react",
        "outDir": "./build",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "es6",
            "es7"
        ],
        "types": [
            "node",
            "mocha",
            "chai"
        ],
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": [
        "node_modules"
    ]
}