{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": true,
        "noEmitOnError": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "jsx": "react",
        "outDir": "./build",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "es6",
            "es7"
        ],
        "types": [
            "node",
            "mocha",
            "chai"
        ],
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        "resolveGlobs": true,
        "forkChecker": true,
        "useWebpackText": true
    },    
    "filesGlob": [
        "./source/**/*.ts",
        "!./node_modules/**"
    ]
}