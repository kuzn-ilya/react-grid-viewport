{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "noEmitOnError": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "jsx": "react",
        "outDir": "./build",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "es6",
            "es7"
        ],
        "types": [
            "mocha",
            "node"
        ],
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types/fbjs"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    }
}